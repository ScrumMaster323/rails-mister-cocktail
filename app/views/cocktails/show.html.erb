<h1>Cocktail info</h1>

<h3><%= @cocktail.name %></h3>

<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.description%>
    <%= dose.ingredient.name%>
    <%= link_to "Delete dose", dose_path(dose), method: :delete, data: {confirm: "Are you sure?"} %>
  </li>
  <% end %>
</ul>
<%= render 'doses/form' %>
<%= link_to "Home", cocktails_path %>

